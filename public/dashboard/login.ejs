<!DOCTYPE html>
<html lang="en">
<!-- Blog Index -->

<head>
    <%- include("../components/scripts") %>
        <title>Dashboard - Login</title>
</head>

<body>
    <%- include("../components/header") %>
        <div class="container">
            <h2>Login</h2>
            <form id="login" action="/api/auth/user" method="POST">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input class="form-control" type="text" id="username" name="username" required placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required placeholder="Enter password">
                </div>
                <input type="submit" class="form-control btn btn-primary" value="Login">
            </form>
        </div>
        <!-- Includes Components Such As Header -->
        <script src="/js/index.js"></script>
</body>

</html>